{
	"name": "sdm-handal",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "NODE_OPTIONS='--inspect' next dev --turbopack --experimental-https",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"install:safe": "npm install --legacy-peer-deps",
		"install:force": "npm install --force",
		"pm2:start": "pm2 start ecosystem.config.js --env production",
		"pm2:dev": "pm2 start ecosystem.config.js --env development",
		"pm2:stop": "pm2 stop sdm-app",
		"pm2:restart": "pm2 restart sdm-app",
		"pm2:reload": "pm2 reload sdm-app",
		"pm2:delete": "pm2 delete sdm-app",
		"pm2:logs": "pm2 logs sdm-app",
		"pm2:monit": "pm2 monit",
		"pm2:list": "pm2 list",
		"pm2:status": "pm2 status sdm-app",
		"pm2:scale": "pm2 scale sdm-app",
		"pm2:show": "pm2 show sdm-app",
		"deploy:production": "pm2 stop all && pm2 delete all && pm2 start ecosystem.config.js --env production",
		"deploy:cluster": "pm2 stop all && pm2 delete all && pm2 start ecosystem.config.js --env production",
		"cluster:scale-up": "pm2 scale sdm-app +2",
		"cluster:scale-down": "pm2 scale sdm-app -2",
		"cluster:reset": "pm2 scale sdm-app 6",
		"monitor": "pm2 monit",
		"load-test": "echo 'ðŸ§ª Load testing for 300 concurrent users...' && echo 'Install artillery: npm install -g artillery' && echo 'Run: artillery run load-test.yml'",
		"health-check": "curl -f http://localhost:3001 || exit 1",
		"performance-check": "pm2 show sdm-app && pm2 monit",
		"photo-watcher": "node scripts/photo-watcher.js",
		"check-photos": "node scripts/check-photos.js",
		"migrate-photos": "node scripts/migrate-photos.js",
		"debug-night-shift": "node scripts/debug-night-shift.js",
		"test-attendance-query": "node scripts/test-attendance-query.js"
	},
